		TNT1 A 0
		TNT1 A 1 ACS_NamedExecute("WDIROldWeapon_id",0,46)
		Fail
	AmmoPickupMurd:
		TNT1 A 0
		TNT1 A 0 A_JumpIfInventory("NewShell",4,"AmmoPickupMurdFull")
