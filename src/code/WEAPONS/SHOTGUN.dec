		TNT1 A 0 A_Log("\cjFound a \c[O1]Shotgun. \cjBRUTAL up close! \n\caDamage: \c[C4]up to 64")
		Stop
	NotPickup:
		TNT1 A 0
		TNT1 A 1 ACS_NamedExecute("OldWeapon_ID",0,4)
