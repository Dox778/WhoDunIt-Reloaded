    loop
	Active:
	TNT1 A 0
	TNT1 A 0 A_Scream
	TNT1 A 0 A_PlaySound("EatMunch")
	//TNT1 A 0 A_GiveToTarget("HealthBonus", 1)
	TNT1 A 0 A_Jump(256,"ok1","ok2","ok3","ok4","ok5")
	ok1:
	TNT1 A 1 A_Print("Will I get food poisoning from this...?")
	stop
