	stop
	ok3:
	TNT1 A 1 A_Print("Cold, spongy... bleugh...")
	stop
	ok4:
	TNT1 A 0 A_Print("That one tastes pretty good, actually...")
	TNT1 A 1 A_GiveToTarget("HealthBonus", 1)
	stop
	ok5:
	TNT1 A 0 A_Print("A little dry, but other than that, it's good!")
	TNT1 A 1 A_GiveToTarget("HealthBonus", 1)
	stop
  }
}

